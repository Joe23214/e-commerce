<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://apListView.title"
      focusComponent="prodottoesDataGrid">
    <data>
        <collection id="prodottoesDc"
                    class="com.company.provacarrello.entity.Prodotto">
            <fetchPlan extends="_base"/>
            <loader id="prodottoesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Prodotto e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="prodottoesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="prodottoesDataGrid.createAction"/>
            <button id="editButton" action="prodottoesDataGrid.editAction"/>
            <button id="removeButton" action="prodottoesDataGrid.removeAction"/>
            <button id="ptojson" text="msg://Esporta i prodotti in Json" classNames="p-m text-success font-bold" alignSelf="CENTER" ></button>
            <button id="ptocsv" text="msg://Esporta i prodotti in Csv" classNames="p-m text-success font-bold" alignSelf="CENTER" ></button>
            <button id="ptoxml" text="msg://Esporta i prodotti in Xml" classNames="p-m text-success font-bold" alignSelf="CENTER" ></button>
            <simplePagination id="pagination" dataLoader="prodottoesDl"/>
        </hbox>
        <dataGrid id="prodottoesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="prodottoesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="nome"/>
                <column property="categoria"/>
                <column property="prezzo"/>
                <column property="descrizione"/>
                <column property="img"/>
                <column property="stock" ></column>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
