<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://prodottoDetailView.title"
      focusComponent="form">
    <data>
        <instance id="prodottoDc"
                  class="com.company.provacarrello.entity.Prodotto">
            <fetchPlan extends="_base"/>
            <loader id="prodottoDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="prodottoDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="nomeField" property="nome"/>
            <textField id="categoriaField" property="categoria"/>
            <textField id="prezzoField" property="prezzo"/>
            <textField id="descrizioneField" property="descrizione"/>
            <fileStorageUploadField id="imgField" clearButtonVisible="true" fileNameVisible="true" property="img"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
