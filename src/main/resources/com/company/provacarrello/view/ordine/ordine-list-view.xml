<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://ordineListView.title"
      focusComponent="ordinesDataGrid">
    <data>
        <collection id="ordinesDc" class="com.company.provacarrello.entity.Ordine">
            <fetchPlan extends="_base">
                <property name="user" fetchPlan="_base"/>
                <property name="righe" fetchPlan="_base">
                    <property name="ordine" fetchPlan="_base"/>
                    <property name="prodotto" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader id="ordinesDl" readOnly="true">
                <query>
                    <![CDATA[select e from Ordine e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <layout>
        <genericFilter id="genericFilter" dataLoader="ordinesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox justifyContent="START" classNames="p-m" css="width: 100%;">
            <!-- Prima hbox: gli elementi sono allineati a sinistra -->
            <hbox alignItems="CENTER" spacing="true" classNames="p-m" css="display: flex; align-items: center; justify-content: flex-start;">
                <datePicker css="margin-bottom:15px;" alignSelf="CENTER" id="fromDate" label="Da data" classNames="p-m" />
                <datePicker css="margin-bottom:15px;" alignSelf="CENTER" id="toDate" label="A data" classNames="p-m" />
                <button alignSelf="CENTER" id="otojson" text="Esporta JSON" classNames="p-m text-success font-bold" />
                <button alignSelf="CENTER" id="otocsv" text="Esporta CSV" classNames="p-m text-success font-bold" />
                <button alignSelf="CENTER" id="otoxml" text="Esporta XML" classNames="p-m text-success font-bold" />
            </hbox>

            <!-- Seconda hbox: gli elementi sono allineati a destra -->
            <hbox alignItems="CENTER" spacing="true" classNames="p-m" css="display: flex; align-items: center; justify-content: flex-end;">
                <button id="createButton" action="ordinesDataGrid.createAction" classNames="p-m" />
                <button id="editButton" action="ordinesDataGrid.editAction" classNames="p-m" />
                <button id="removeButton" action="ordinesDataGrid.removeAction" classNames="p-m" />
            </hbox>

        </hbox>



        <dataGrid id="ordinesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="ordinesDc">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="user"/>
                <column property="dataOrdine"/>
                <column property="totale"/>
            </columns>
        </dataGrid>
        <simplePagination id="pagination" dataLoader="ordinesDl"/>
    </layout>
</view>
